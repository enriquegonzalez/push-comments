var notifications = angular.module('notifications', ['ngRoute', 'ngResource']);

notifications.config(function($httpProvider, $routeProvider) {
  $httpProvider.defaults.headers.common['X-CSRF-Token'] = document.querySelector('meta[name=csrf-token]').content;
  $routeProvider
  .when('/', {
    templateUrl: '/assets/dashboard.html',
    controller: 'PostsCtrl'
  })
  .otherwise({
    route: '/'
  });
});

notifications.factory('Post', function($resource) {
  return $resource("/posts/:id.json", {id: '@id'});
});

notifications.factory('Comment', function($resource) {
  return $resource("/posts/:post_id/comments.json", {post_id: '@post.id'});
});

notifications.controller('PostsCtrl', function($scope,$routeParams, Post){
  $scope.posts = Post.query();
  console.log($scope.posts)
});

notifications.controller('CommentsCtrl', function($scope,$routeParams, Comment){
  $scope.comments = Comment.query({post_id: 1});
  console.log($scope.comments)
});

